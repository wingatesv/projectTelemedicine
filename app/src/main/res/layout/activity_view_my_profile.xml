<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.ViewMyProfileActivity">

    <ProgressBar
        android:id="@+id/ViewMyProfile_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView_myProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_myProfile" />

    <TextView
        android:id="@+id/lbl_myProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.1"
        android:text="Your profile"
        android:textColor="#031163"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.1"
        android:text="First Name"
        android:textColor="#707c80"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tf_ViewMyFirstName"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <EditText

        android:id="@+id/tf_ViewMyFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPersonName"
        android:textColor="#031163"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_updateMyProfilePic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.1"
        android:text="Last Name"
        android:textColor="#707c80"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tf_ViewMyLastName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tf_ViewMyLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPersonName"
        android:textColor="#031163"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_ViewMyFirstName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.1"
        android:text="Phone Number"
        android:textColor="#707c80"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tf_ViewMyPhoneNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tf_ViewMyPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="+60XX-XXXXXXXX"
        android:inputType="phone"
        android:textColor="#031163"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_ViewMyLastName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.1"
        android:text="State"
        android:textColor="#707c80"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tf_ViewMyState"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tf_ViewMyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Example: Selangor"
        android:inputType="textPersonName"
        android:textColor="#031163"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tf_ViewMyPhoneNumber"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/solid_border"
        android:ems="13"
        android:letterSpacing="0.1"
        android:padding="12dp"
        android:text="Update"
        android:textSize="17sp"
        app:backgroundTint="#1978a5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_updateMyProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Update Profile Picture"
        android:textColor="#1978a5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_myProfilePic" />




</androidx.constraintlayout.widget.ConstraintLayout>